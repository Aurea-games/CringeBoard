		{
			"name": "Create",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Extract `id` from JSON response and save to environment as ARTICLE_ID",
							"pm.test(\"Store ARTICLE_ID from POST response\", function () {",
							"    pm.response.to.have.status(201);",
							"    pm.response.to.have.header(\"Content-Type\");",
							"",
							"    let json;",
							"    try {",
							"        json = pm.response.json();",
							"    } catch (e) {",
							"        pm.expect.fail(\"Response is not valid JSON\");",
							"    }",
							"",
							"    pm.expect(json).to.be.an(\"object\");",
							"    pm.expect(json).to.have.property(\"id\");",
							"",
							"    const articleId = json.id;",
							"    pm.expect(articleId, \"id should be a number or string\").to.satisfy(v => typeof v === 'number' || typeof v === 'string');",
							"",
							"    // Set in active environment",
							"    pm.environment.set(\"ARTICLE_ID\", String(articleId));",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
