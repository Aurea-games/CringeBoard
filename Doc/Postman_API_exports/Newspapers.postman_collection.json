		{
			"name": "Create",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Extract id from JSON response and save to environment as NEWSPAPER_ID",
							"pm.test(\"Response has an id and it is saved to environment\", function () {",
							"    pm.response.to.have.status(201);",
							"    pm.response.to.have.header(\"Content-Type\");",
							"",
							"    let json;",
							"    try {",
							"        json = pm.response.json();",
							"    } catch (e) {",
							"        pm.expect.fail(\"Response is not valid JSON: \" + e.message);",
							"    }",
							"",
							"    pm.expect(json).to.be.an(\"object\");",
							"    pm.expect(json).to.have.property(\"id\");",
							"",
							"    const id = json.id;",
							"    pm.expect(id, \"id should be a number or string\").to.satisfy(v => [\"number\",\"string\"].includes(typeof v));",
							"",
							"    pm.environment.set(\"NEWSPAPER_ID\", String(id));",
							"});",
							"",
							"// Optional: log for debug visibility",
							"// console.log(\"Saved NEWSPAPER_ID=\", pm.environment.get(\"NEWSPAPER_ID\"));"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
